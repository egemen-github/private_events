<div class="container"></br>
<h3>All Events</h3></br>
  <div class="row">
  <h5>Upcoming Events:</h5>
    <% @coming.each do |event| %>
    <div class="col-md-6 col-xxl-3"></br>
        <div class="card shadow p-3 mb-5 bg-body rounded" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= event.title %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= event.location %></h6>
            <p class="card-subtitle mb-2 text-muted"><%= event.time.strftime("%k:%M") %> | <%= event.date.strftime("%d/%m/%Y") %></p>
            <a href="#" class="card-link"><%= link_to 'Show', event_path(event.id) %></a>
          </div>
        </div>
      </div>
    <% end %>
  </div></br></br>
  <div class="row">
  <h5>Passed Events:</h5>
    <% @past.each do |event| %>
    <div class="col-md-6 col-xxl-3"></br>
        <div class="card shadow p-3 mb-5 bg-body rounded" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= event.title %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= event.location %></h6>
            <p class="card-subtitle mb-2 text-muted"><%= event.time.strftime("%k:%M") %> | <%= event.date.strftime("%d/%m/%Y") %></p>
            <a href="#" class="card-link"><%= link_to 'Show', event_path(event.id) %></a>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>